<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="700.0" prefWidth="1100.0" stylesheets="@../../Styles/ModernTheme.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bookshop.controllers.User.UserController">
    <children>
        <HBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>

                <!-- Left Sidebar -->
                <VBox alignment="TOP_CENTER" minWidth="240.0" prefWidth="240.0" styleClass="sidebar" spacing="20.0">
                    <padding>
                        <Insets bottom="30.0" left="20.0" right="20.0" top="40.0" />
                    </padding>
                    <children>
                        <!-- Logo / Brand Area -->
                        <VBox alignment="CENTER" spacing="5.0">
                            <children>
                                <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                                    <!-- Placeholder for Logo -->
                                </ImageView>
                                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="BOOKSHOP" textAlignment="CENTER">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Text>
                                <Text fill="#d4af37" strokeType="OUTSIDE" strokeWidth="0.0" text="PREMIUM POS" textAlignment="CENTER">
                                    <font>
                                        <Font size="12.0" />
                                    </font>
                                </Text>
                            </children>
                        </VBox>

                        <Separator opacity="0.2" />

                        <!-- Time and Date -->
                        <VBox alignment="CENTER" spacing="2.0">
                            <children>
                                <Text fx:id="timeText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="08:00">
                                    <font>
                                        <Font name="System Bold" size="42.0" />
                                    </font>
                                </Text>
                                <Text fx:id="dateText" fill="#e0e0e0" strokeType="OUTSIDE" strokeWidth="0.0" text="18 Nov 2025">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Text>
                            </children>
                        </VBox>

                        <Region VBox.vgrow="ALWAYS" />

                        <!-- User Info -->
                        <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 10; -fx-padding: 15;">
                            <children>
                                <Text fx:id="greetingText" fill="#e0e0e0" strokeType="OUTSIDE" strokeWidth="0.0" text="Good Morning">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Text>
                                <Text fx:id="userText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Cashier">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Text>
                            </children>
                        </VBox>

                        <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" prefHeight="45.0" prefWidth="200.0" styleClass="button-danger" text="LOGOUT" />
                    </children>
                </VBox>

                <!-- Center Content (Products) -->
                <VBox spacing="20.0" HBox.hgrow="ALWAYS">
                    <children>
                        <!-- Top Bar -->
                        <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="glass-panel" prefHeight="70.0">
                            <padding>
                                <Insets left="20.0" right="20.0" />
                            </padding>
                            <children>
                                <TextField fx:id="searchField" onAction="#handleSearch" prefHeight="40.0" promptText="Search products..." HBox.hgrow="ALWAYS" style="-fx-font-size: 14;" />
                                <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearch" prefHeight="40.0" styleClass="button-primary" text="SEARCH" />
                                <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefreshProducts" prefHeight="40.0" styleClass="button-secondary" text="REFRESH" />
                            </children>
                        </HBox>

                        <!-- Product Grid -->
                        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                            <content>
                                <GridPane fx:id="productsGrid" hgap="20.0" vgap="20.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.3" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.3" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.3" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                    <!-- Products will be loaded dynamically here -->
                                </GridPane>
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>

                <!-- Right Sidebar (Cart) -->
                <VBox minWidth="320.0" prefWidth="320.0" spacing="15.0" styleClass="glass-panel">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <Text styleClass="text-header" text="Current Order" />
                        
                        <Separator />

                        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox fx:id="cartItemsContainer" spacing="10.0">
                                    <!-- Cart Items will be loaded dynamically here -->
                                </VBox>
                            </content>
                        </ScrollPane>

                        <Separator />

                        <!-- Totals Section -->
                        <VBox spacing="10.0">
                            <children>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Text styleClass="text-body" text="Subtotal" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Text fx:id="subtotalText" styleClass="text-body" text="Rs. 0.00" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Text styleClass="text-body" text="Discount" fill="#28a745" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Text fx:id="discountText" styleClass="text-body" text="- Rs. 0.00" fill="#28a745" />
                                    </children>
                                </HBox>
                                <Separator />
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Text styleClass="text-subheader" text="TOTAL" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Text fx:id="totalAmountText" styleClass="text-header" text="Rs. 0.00" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <HBox spacing="10.0">
                            <children>
                                <Button fx:id="clearCartButton" mnemonicParsing="false" onAction="#handleClearCart" prefHeight="50.0" prefWidth="100.0" styleClass="button-danger" text="CLEAR" />
                                <Button fx:id="payButton" mnemonicParsing="false" onAction="#handlePay" prefHeight="50.0" HBox.hgrow="ALWAYS" styleClass="button-primary" text="PAY NOW" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

            </children>
        </HBox>
    </children>
</AnchorPane>