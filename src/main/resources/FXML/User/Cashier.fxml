<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="bookshop.controllers.User.UserController"
            stylesheets="@../../Styles/MainTheme.css">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white; -fx-padding: 15 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 0, 0, 0, 2);">
            <VBox>
                <Text fx:id="greetingText" text="Good Morning" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: #1a1a1a;"/>
                <Text fx:id="userText" text="Cashier" style="-fx-font-size: 14px; -fx-fill: #888;"/>
            </VBox>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <HBox alignment="CENTER" spacing="20">
                <Text fx:id="timeText" text="12:00" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #d4af37;"/>
                <Text fx:id="dateText" text="01 Jan 2025" style="-fx-font-size: 14px; -fx-fill: #888;"/>
            </HBox>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" styleClass="button-secondary"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            <!-- Search Bar -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Search products..." prefWidth="400" style="-fx-font-size: 16px;"/>
                <Button fx:id="searchButton" text="Search" onAction="#handleSearch"/>
                <ToggleButton fx:id="itemToggle" text="Grid View" selected="true" visible="false" managed="false"/>
            </HBox>
            
            <!-- Product Grid -->
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
                <content>
                    <GridPane hgap="20" vgap="20" style="-fx-padding: 10;">
                        <!-- Products will be added here dynamically by controller -->
                    </GridPane>
                </content>
            </ScrollPane>
        </VBox>
    </center>

    <!-- Right Sidebar (Cart) -->
    <right>
        <VBox prefWidth="350" spacing="0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), -5, 0, 0, 0);">
            <VBox style="-fx-padding: 20; -fx-background-color: #1a1a1a;">
                <Text text="Current Order" style="-fx-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            </VBox>
            
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-background: transparent;">
                <content>
                    <VBox fx:id="cartItemsContainer" spacing="10" style="-fx-padding: 15;"/>
                </content>
            </ScrollPane>
            
            <VBox style="-fx-padding: 20; -fx-background-color: #f9f9f9; -fx-border-color: #eee; -fx-border-width: 1 0 0 0;">
                <HBox alignment="CENTER_LEFT">
                    <Text text="Total" style="-fx-font-size: 18px; -fx-fill: #666;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Text fx:id="totalAmountText" text="Rs. 0.00" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #1a1a1a;"/>
                </HBox>
                
                <VBox spacing="10" style="-fx-padding: 20 0 0 0;">
                    <Button fx:id="payButton" text="Pay Now" onAction="#handlePay" maxWidth="Infinity" style="-fx-font-size: 18px; -fx-padding: 15;"/>
                    <Button fx:id="clearCartButton" text="Clear Cart" onAction="#handleClearCart" styleClass="button-secondary" maxWidth="Infinity"/>
                </VBox>
            </VBox>
        </VBox>
    </right>

</BorderPane>
