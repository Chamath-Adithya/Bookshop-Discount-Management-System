<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bookshop.controllers.RoleSelectionController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <children>
                <Text text="Select Login Type">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Text>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="admin_btn" text="Admin Login" mnemonicParsing="false" prefWidth="160.0" onAction="#onAdmin" />
                        <Button fx:id="cashier_btn" text="Cashier Login" mnemonicParsing="false" prefWidth="160.0" onAction="#onCashier" />
                    </children>
                </HBox>
                <Label fx:id="info_lbl" text="Choose your role to continue" />
            </children>
        </VBox>
    </children>
</AnchorPane>
