<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../Styles/Login.css" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="bookshop.controllers.LoginController">

    <VBox prefHeight="400.0" prefWidth="200.0" styleClass="login_logo_container" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Login"/>
    </VBox>

    <VBox layoutX="200.0" prefHeight="350.0" prefWidth="350.0" styleClass="login_form_container"
          AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

        <Label fx:id="username_lbl" text="User Name"/>
        <TextField fx:id="username_fld" styleClass="input_field"/>
        <Label text="Password"/>
        <TextField fx:id="password_fld" styleClass="input_field"/>
        <Button fx:id="login_btn" mnemonicParsing="false" prefHeight="31.0" prefWidth="374.0" text="Submit"/>
        <Label fx:id="error_lbl" styleClass="error_lbl" text="error"/>

    </VBox>
</AnchorPane>
