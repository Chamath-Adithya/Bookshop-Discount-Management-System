<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.collections.*?>

<AnchorPane prefHeight="768.0" prefWidth="1366.0" stylesheets="@../../Styles/ModernTheme.css" 
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="bookshop.controllers.Admin.AdminController">
    
    <children>
        <HBox spacing="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                
                <!-- Sidebar -->
                <VBox prefWidth="260.0" styleClass="sidebar" spacing="0.0">
                    <children>
                        <!-- Brand -->
                        <VBox alignment="CENTER" prefHeight="100.0" spacing="5.0" style="-fx-background-color: rgba(0,0,0,0.1);">
                            <children>
                                <Text fill="WHITE" text="BOOKSHOP" style="-fx-font-weight: bold; -fx-font-size: 24;" />
                                <Text fill="#d4af37" text="ADMIN CONSOLE" style="-fx-font-size: 12;" />
                            </children>
                        </VBox>
                        
                        <!-- Menu Items -->
                        <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                            <padding>
                                <Insets top="20.0" left="10.0" right="10.0" />
                            </padding>
                            <children>
                                <Label text="MANAGEMENT" style="-fx-text-fill: #88aa99; -fx-font-size: 11; -fx-font-weight: bold; -fx-padding: 0 0 5 10;" />
                                
                                <Button fx:id="productsBtn" mnemonicParsing="false" onAction="#handleProductsMenu" prefWidth="240.0" styleClass="button-primary" text="PRODUCTS" alignment="CENTER_LEFT" />
                                <Button fx:id="discountsBtn" mnemonicParsing="false" onAction="#handleDiscountsMenu" prefWidth="240.0" styleClass="button-primary" text="DISCOUNTS" alignment="CENTER_LEFT" />
                                <Button fx:id="customersBtn" mnemonicParsing="false" onAction="#handleCustomersMenu" prefWidth="240.0" styleClass="button-primary" text="CUSTOMERS" alignment="CENTER_LEFT" />
                                <Button fx:id="usersBtn" mnemonicParsing="false" onAction="#handleUsersMenu" prefWidth="240.0" styleClass="button-primary" text="USERS" alignment="CENTER_LEFT" />
                                
                                <Region prefHeight="20.0" />
                                
                                <Label text="ANALYTICS" style="-fx-text-fill: #88aa99; -fx-font-size: 11; -fx-font-weight: bold; -fx-padding: 0 0 5 10;" />
                                <Button fx:id="reportsBtn" mnemonicParsing="false" onAction="#handleReportsMenu" prefWidth="240.0" styleClass="button-primary" text="REPORTS" alignment="CENTER_LEFT" />
                            </children>
                        </VBox>
                        
                        <!-- User Profile -->
                        <VBox alignment="CENTER_LEFT" spacing="5.0" style="-fx-background-color: rgba(0,0,0,0.2); -fx-padding: 15;">
                            <children>
                                <Text fx:id="adminNameText" fill="WHITE" text="Admin User" style="-fx-font-weight: bold;" />
                                <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" styleClass="button-danger" text="LOGOUT" prefWidth="230.0" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
                
                <!-- Main Content -->
                <VBox HBox.hgrow="ALWAYS" style="-fx-background-color: #f4f7f6;">
                    <children>
                        <!-- Header -->
                        <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);">
                            <padding>
                                <Insets left="20.0" right="20.0" />
                            </padding>
                            <children>
                                <Text text="Dashboard Overview" styleClass="text-subheader" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Text text="v1.0.0" fill="#999" />
                            </children>
                        </HBox>
                        
                        <!-- Content Area -->
                        <AnchorPane VBox.vgrow="ALWAYS">
                            <padding>
                                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                            </padding>
                            <children>
                                <TabPane fx:id="contentTabPane" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" styleClass="glass-panel">
                                    
                                    <!-- Products Tab -->
                                    <Tab text="Products" closable="false">
                                        <VBox spacing="20.0">
                                            <padding>
                                                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                                            </padding>
                                            <children>
                                                <!-- Action Bar -->
                                                <HBox spacing="15.0" alignment="CENTER_LEFT" styleClass="card">
                                                    <children>
                                                        <Text text="Add New Product" styleClass="text-body" />
                                                        <TextField fx:id="productIdField" prefWidth="120.0" promptText="ID" />
                                                        <TextField fx:id="productNameField" prefWidth="200.0" promptText="Name" HBox.hgrow="ALWAYS" />
                                                        <TextField fx:id="productPriceField" prefWidth="120.0" promptText="Price" />
                                                        <TextField fx:id="productQtyField" prefWidth="100.0" promptText="Qty" />
                                                        <Button fx:id="addProductBtn" mnemonicParsing="false" onAction="#handleAddProduct" styleClass="button-primary" text="ADD PRODUCT" />
                                                    </children>
                                                </HBox>

                                                <!-- Table -->
                                                <TableView fx:id="productsTable" VBox.vgrow="ALWAYS" styleClass="card">
                                                    <columns>
                                                        <TableColumn fx:id="productIdCol" prefWidth="100.0" text="ID" />
                                                        <TableColumn fx:id="productNameCol" prefWidth="300.0" text="NAME" />
                                                        <TableColumn fx:id="productPriceCol" prefWidth="150.0" text="PRICE" />
                                                        <TableColumn fx:id="productQtyCol" prefWidth="150.0" text="QUANTITY" />
                                                        <TableColumn fx:id="productActionCol" prefWidth="150.0" text="ACTIONS" />
                                                    </columns>
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                    </columnResizePolicy>
                                                </TableView>
                                            </children>
                                        </VBox>
                                    </Tab>

                                    <!-- Discounts Tab -->
                                    <Tab text="Discounts" closable="false">
                                        <VBox spacing="20.0">
                                            <padding>
                                                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                                            </padding>
                                            <children>
                                                <HBox spacing="15.0" alignment="CENTER_LEFT" styleClass="card">
                                                    <children>
                                                        <Text text="New Discount Rule" styleClass="text-body" />
                                                        <TextField fx:id="discountCodeField" prefWidth="150.0" promptText="Code" />
                                                        <TextField fx:id="discountTypeField" prefWidth="120.0" promptText="Type" />
                                                        <TextField fx:id="discountValueField" prefWidth="120.0" promptText="Value" />
                                                        <TextField fx:id="discountMinAmountField" prefWidth="150.0" promptText="Min Amount" />
                                                        <Button fx:id="addDiscountBtn" mnemonicParsing="false" onAction="#handleAddDiscount" styleClass="button-primary" text="ADD RULE" />
                                                    </children>
                                                </HBox>

                                                <TableView fx:id="discountsTable" VBox.vgrow="ALWAYS" styleClass="card">
                                                    <columns>
                                                        <TableColumn fx:id="discountCodeCol" prefWidth="150.0" text="CODE" />
                                                        <TableColumn fx:id="discountTypeCol" prefWidth="150.0" text="TYPE" />
                                                        <TableColumn fx:id="discountValueCol" prefWidth="150.0" text="VALUE" />
                                                        <TableColumn fx:id="discountMinCol" prefWidth="150.0" text="MIN AMOUNT" />
                                                        <TableColumn fx:id="discountActionCol" prefWidth="150.0" text="ACTIONS" />
                                                    </columns>
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                    </columnResizePolicy>
                                                </TableView>
                                            </children>
                                        </VBox>
                                    </Tab>

                                    <!-- Customers Tab -->
                                    <Tab text="Customers" closable="false">
                                        <VBox spacing="20.0">
                                            <padding>
                                                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                                            </padding>
                                            <children>
                                                <HBox spacing="15.0" alignment="CENTER_LEFT">
                                                    <children>
                                                        <Button mnemonicParsing="false" onAction="#handleAddCustomer" styleClass="button-primary" text="REGISTER NEW CUSTOMER" />
                                                    </children>
                                                </HBox>
                                                <TableView fx:id="customersTable" VBox.vgrow="ALWAYS" styleClass="card">
                                                    <columns>
                                                        <TableColumn fx:id="customerIdCol" prefWidth="100.0" text="ID" />
                                                        <TableColumn fx:id="customerNameCol" prefWidth="250.0" text="NAME" />
                                                        <TableColumn fx:id="customerTypeCol" prefWidth="150.0" text="TYPE" />
                                                        <TableColumn fx:id="customerPhoneCol" prefWidth="200.0" text="PHONE" />
                                                        <TableColumn fx:id="customerActionCol" prefWidth="150.0" text="ACTIONS" />
                                                    </columns>
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                    </columnResizePolicy>
                                                </TableView>
                                            </children>
                                        </VBox>
                                    </Tab>

                                    <!-- Users Tab -->
                                    <Tab text="Users" closable="false">
                                        <VBox spacing="20.0">
                                            <padding>
                                                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                                            </padding>
                                            <children>
                                                <HBox spacing="15.0" alignment="CENTER_LEFT" styleClass="card">
                                                    <children>
                                                        <Text text="Add System User" styleClass="text-body" />
                                                        <TextField fx:id="userIdField" prefWidth="120.0" promptText="User ID" />
                                                        <TextField fx:id="userUsernameField" prefWidth="150.0" promptText="Username" />
                                                        <PasswordField fx:id="userPasswordField" prefWidth="150.0" promptText="Password" />
                                                        <TextField fx:id="userRoleField" prefWidth="120.0" promptText="Role" />
                                                        <Button fx:id="addUserBtn" mnemonicParsing="false" onAction="#handleAddUser" styleClass="button-primary" text="ADD USER" />
                                                    </children>
                                                </HBox>

                                                <TableView fx:id="usersTable" VBox.vgrow="ALWAYS" styleClass="card">
                                                    <columns>
                                                        <TableColumn fx:id="userIdCol" prefWidth="100.0" text="ID" />
                                                        <TableColumn fx:id="userUsernameCol" prefWidth="200.0" text="USERNAME" />
                                                        <TableColumn fx:id="userRoleCol" prefWidth="150.0" text="ROLE" />
                                                        <TableColumn fx:id="userActionCol" prefWidth="150.0" text="ACTIONS" />
                                                    </columns>
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                    </columnResizePolicy>
                                                </TableView>
                                            </children>
                                        </VBox>
                                    </Tab>

                                    <!-- Reports Tab -->
                                    <Tab text="Reports" closable="false">
                                        <VBox spacing="20.0">
                                            <padding>
                                                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                                            </padding>
                                            <children>
                                                <HBox spacing="15.0" alignment="CENTER_LEFT">
                                                    <children>
                                                        <Button fx:id="salesReportBtn" mnemonicParsing="false" onAction="#handleSalesReport" styleClass="button-primary" text="GENERATE SALES REPORT" />
                                                        <Button fx:id="inventoryReportBtn" mnemonicParsing="false" onAction="#handleInventoryReport" styleClass="button-secondary" text="INVENTORY REPORT" />
                                                        <Button fx:id="customersReportBtn" mnemonicParsing="false" onAction="#handleCustomersReport" styleClass="button-secondary" text="CUSTOMER ANALYTICS" />
                                                    </children>
                                                </HBox>
                                                <TextArea fx:id="reportTextArea" VBox.vgrow="ALWAYS" styleClass="card" wrapText="true" style="-fx-font-family: 'Consolas', monospace;" />
                                            </children>
                                        </VBox>
                                    </Tab>

                                </TabPane>
                            </children>
                        </AnchorPane>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
